<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tobias.run.editor.EditorActivity"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightGrey">

    <android.support.v7.widget.Toolbar
        android:id="@+id/editor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Add Manual Entry"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:transitionName="fab_editor_transition"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editor_container"
        android:layout_margin="15dp"
        android:background="@drawable/mild_rounded_button"
        android:elevation="5dp"
        android:orientation="vertical"
        android:alpha="0">

        <RelativeLayout
            android:id="@+id/editor_distance_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditorItemHeight"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/editor_image_distance"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_road" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/editor_image_distance"
                android:text="Distance"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/editor_distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="None" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editor_time_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditorItemHeight"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/editor_image_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_timer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/editor_image_time"
                android:text="Time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/editor_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="None" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editor_date_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditorItemHeight"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/editor_image_date"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_date_range" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/editor_image_date"
                android:text="Date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/editor_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="None" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editor_rating_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditorItemHeight"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/editor_image_rating"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_stars"
                android:transitionName="fab_editor_transition"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/editor_image_rating"
                android:text="Rating"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/editor_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="None" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
