<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="421dp"
        android:layout_height="152dp"
        android:scaleType="centerCrop"
        android:src="@drawable/navheader"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navheader_profile_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:src="@color/cardview_light_background"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navheader_username_text"
        tools:text="John Smith"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/navheader_profile_image"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/navheader_profile_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navheader_email_text"
        tools:text="johnsmith@gmail.com"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/navheader_username_text"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/navheader_username_text" />

</android.support.constraint.ConstraintLayout>