<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="?attr/listPreferredItemHeight"
    android:background="?attr/selectableItemBackground">

    <RatingBar
        android:id="@+id/list_item_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rotation="90"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:rating="1" />

    <TextView
        android:id="@+id/list_item_distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2.34 km"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_item_rating_bar"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/list_item_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:11:23"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/list_item_distance_text"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_distance_text"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_distance_text" />

    <TextView
        android:id="@+id/list_item_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sun, 1/8/2017"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_overflow_icon" />

    <ImageButton
        android:id="@+id/list_item_overflow_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_more_horiz"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


</android.support.constraint.ConstraintLayout>