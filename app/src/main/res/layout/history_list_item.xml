<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="?attr/listPreferredItemHeight"
    android:background="?attr/selectableItemBackground">

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:isIndicator="true"
        android:numStars="3"
        tools:rating="1"
        android:stepSize="1"
        style="?android:attr/ratingBarStyleSmall"
        android:rotation="90"
        />

    <TextView
        android:layout_toRightOf="@id/rating_bar"
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2.34 km"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_toRightOf="@id/rating_bar"
        android:layout_below="@id/distance_text"
        android:layout_alignRight="@id/distance_text"
        android:layout_alignLeft="@id/distance_text"
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:11:23"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/time_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        tools:text="Sun, 1/8/2017"/>

    <ImageButton
        android:id="@+id/overflow_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_more_horiz"
        android:background="@android:color/transparent"
        android:layout_above="@id/date_text" />


</RelativeLayout>