<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg_end"
        tools:context=".ui.login.LoginActivity">

        <TextView
            android:id="@+id/new_account_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/all_run"
            android:textColor="@android:color/white"
            android:textSize="70sp"
            android:textStyle="bold|italic"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_account_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:textColorHint="@color/iron"
            android:theme="@style/EditTextTheme"
            app:errorTextAppearance="@style/TextInputLayoutError"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_account_logo"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_account_emailhint"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="53dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_account_password1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:textColorHint="@color/iron"
            android:theme="@style/EditTextTheme"
            app:errorTextAppearance="@style/TextInputLayoutError"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_account_email"
            app:passwordToggleEnabled="false"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_account_passwordhint"
                android:inputType="textPassword"
                android:textColor="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_account_password2"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:textColorHint="@color/iron"
            android:theme="@style/EditTextTheme"
            app:errorTextAppearance="@style/TextInputLayoutError"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_account_password1"
            app:passwordToggleEnabled="false"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_account_repeatpassword"
                android:inputType="textPassword"
                android:textColor="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/new_account_create_account_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="@string/new_account_createaccount"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_account_password2"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <View
            android:id="@+id/view2"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/white"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/new_account_create_account_button"
            tools:layout_constraintTop_creator="1" />

        <View
            android:id="@+id/view"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/new_account_create_account_button"
            tools:layout_constraintTop_creator="1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/new_account_or"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/view2"
            app:layout_constraintRight_toLeftOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/new_account_create_account_button" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/new_account_google_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:buttonSize="icon_only"
            app:layout_constraintBottom_toTopOf="@+id/new_account_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.6"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/new_account_loading_indicator"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:visibility="gone"
            app:indicatorColor="@android:color/white"
            app:indicatorName="BallClipRotateIndicator"
            app:layout_constraintBottom_toBottomOf="@id/new_account_create_account_button"
            app:layout_constraintLeft_toLeftOf="@+id/new_account_create_account_button"
            app:layout_constraintRight_toRightOf="@+id/new_account_create_account_button"
            app:layout_constraintTop_toTopOf="@+id/new_account_create_account_button" />

        <Button
            android:id="@+id/new_account_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:text="@string/new_account_return"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>
